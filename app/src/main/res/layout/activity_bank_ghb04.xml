                            android:hint="จำนวน"
                            android:textAlignment="center"
                            android:textColorHint="@color/edit_text"
                            android:textSize="@dimen/h2" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="บาท"
